<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="restriction">
	<insert id="insertRest" parameterType="rest">
		insert into restriction values(rest_seq.nextval,#{restEmail},#{restCg},#{restContent},to_char(sysdate,'yyyy-mm-dd'),
		<if test="restCg eq 28">
		to_char(sysdate+7,'yyyy-mm-dd')
		</if>
		<if test="restCg eq 29">
		to_char(sysdate+99999,'yyyy-mm-dd')
		</if>
		)
	</insert>
	<update id="updateMemberGrade" parameterType="rest">
		update member set grade=3 where email=#{restEmail} 
	</update>
	<!-- 매일 12시에 이용제한이 끝난 회원 삭제시켜주기 -->
	<delete id="deleteRestEndRest">
		delete from restriction where rest_no in((select rest_no from restriction where end_date &lt; to_char(sysdate,'yyyy-mm-dd')))
	</delete>
</mapper>
