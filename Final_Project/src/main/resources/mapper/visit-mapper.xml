<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="visit">
	<select id="searchIp" parameterType="string" resultType="visit">
		select visit_no as visitNo, visit_ip as visitIp, visit_date as visitDate from visit where visit_ip=#{visitIp}
	</select>
	<insert id="insertVisit" parameterType="string">
		insert into visit values(visit_seq.nextval,#{visitorIp},to_char(sysdate,'yyyy-mm-dd'))
	</insert>
	<select id="selectVisit" parameterType="visit" resultType="int">
		select count(*) from visit
		<if test='selectType != null'>
			where visit_date = to_char(sysdate,'yyyy-mm-dd')
		</if>
	</select>
</mapper>
